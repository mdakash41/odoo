<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <!--    this section is for adding a new option into the action section     -->
    <record id="action_patient_appointments" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.appointment</field>
        <field name="domain">[('patient_id','=',active_id)]</field>
        <!--        <field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
        <!--        <field name="view_id" ref="test_app.appointment_tree"/>-->
        <field name="binding_model_id" ref="model_hospital_patient"/>
    </record>

    <record id="open_patients_appointment" model="ir.actions.act_window">
        <field name="name">DO Appointments</field>
        <!-- <field name="type">ir.actions.act_window</field> -->
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('patient_id','=',active_id)]</field>
        <field name="context">{}</field>
    </record>

    <record id="sale_order_inherit" model="ir.ui.view">
        <field name="name">sale.order.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="patient_name"/>
            </field>
        </field>
    </record>


    <!--    Tree view of the patient model -->
    <record id="patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name_seq"/>
                <field name="name"/>
                <field name="patient_age"/>
                <field name="age_group" />
                <field name="notes"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>




    <!--    form view of the patient model-->
    <record id="patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml" >
            <form string="Patients">

                <header>
                    <button name="%(test_app.create_appointment_wizard)d" type="action" string="Create Appointment" context="{'default_patient_id':active_id}" class="oe_highlight"/>
                    <button name="action_send_card" type="object" string="Send Patient Mail" class="oe_highlight"/>
                    <button name="print_patient_card_excell" type="object" string="Print Patient Card Excell" class="oe_highlight"/>
                    <button name="print_patient_card" type="object" string="Print Patient Card" class="oe_highlight"/>
                </header>

                <sheet>

                    <!--                    smart button    -->
                    <div class="oe_button_box" name="button_box">
                        <button  type="object" name="open_patients_appointment"
                                 class="oe_stat_button" icon="fa-calendar">
                            <field name="total_appointment" string="Appointment" widget="statinfo"/>
                        </button>

                        <button  type="action" name="%(open_patients_appointment)d"
                                 class="oe_stat_button" icon="fa-usd">
                            <field name="total_appointment" string="Appointment" widget="statinfo"/>
                        </button>

                        <button name="toggle_active" string="Archive"  type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;:&quot;archive&quot;}"/>
                        </button>

                    </div>

                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name_seq" readonly="1"/>
                        </h1>
                    </div>
                    <group col="3">
                        <group >
                            <field string="Your Name here" name="name"/>
                            <field name="patient_name_upper" groups="base.group_no_one"/>

                        </group>
                        <group>
                            <field name="patient_age" />
                            <field name="user_id" />
                        </group>
                        <group>
                            <field name="email_id" groups="test_app.group_hospital_manager" />
                            <field name="gender"  />
                            <field name="age_group"/>
                            <field name="doctor_id" attrs="{'invisible':[('gender','=','male')]}" options="{'no_create':True,'no_create_edit':True,'no_open':True}" />
                            <field name="doctor_gender"/>
                        </group>


                    </group>
                    <group>
                        <field name="notes"/>
                        <!--                        <field name="image"/>-->
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh':'recipients'}"/>
                </div>
            </form>
        </field>
    </record>


    <!--    search View    -->
    <record id="hospital_patient_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search string="Search Patients">
                <field name="name_seq" filter_domain="['|',('name_seq','ilike',self),('name','ilike',self),]"/>
                <field name="name_seq"/>
                <field name="name"/>
            </search>

        </field>
    </record>

    <!--Kanban View     -->
    <record id="patient_kanban" model="ir.ui.view">
        <field name="name">hospital.patient.kanban</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <!--          use this inside kanban to sort this based on group  default_group_by="doctor_id"-->
            <kanban default_group_by="doctor_id">
                <field name="id"/>
                <field name="image"/>
                <field name="doctor_id"/>
                <field name="patient_age"/>
                <field name="email_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hospital_patient_kanban">
                            <t t-if="record.image.raw_value">
                                <div class="o_kanban_image_fill_left d-none d-md-block"
                                     t-attf-style="background-image:url('#{kanban_image('hospital.patient', 'image', record.id.raw_value)}')"/>
                            </t>
                            <t t-else="">
                                <img class="o_kanban_image" alt="Avatar" t-att-src='_s + "/web/static/src/img/user_menu_avatar.png"'/>
                            </t>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title"><field name="display_name"/></strong>
                                <div class="o_kanban_tags_section"/>
                                <ul>
                                    <li>Age : <field name="patient_age"/></li>
                                    <li>Doctor : <field name="doctor_id"/></li>
                                    <li>Email : <field name="email_id"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                    <searchpanel>
                        <field name="doctor_id" icon="fa-building"/>
                        <field name="doctor_id" select="multi" icon="fa-tags"/>
                    </searchpanel>
                </templates>
            </kanban>
        </field>
    </record>




    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{"search_default_name":"demo"}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Testing my odoo app
                create first patient!
            </p>
        </field>
    </record>



    <menuitem id="hospital_root" name="Hospital" sequence="0" web_icon="test_app,static/description/icon.png"/>
    <menuitem id="hospital_patient" name="Patient" parent="hospital_root" action="action_patient"/>
    <menuitem id="create_appointment" name="Create Appointment" parent="hospital_root" action="create_appointment_wizard"/>

</odoo>